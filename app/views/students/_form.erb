<%= render 'shared/errors', obj: @student %>

<div class="row">
  <div class="col s12">
    <h3 class="center-align"><%= @student.new_record? ? "Sign Up" : "Edit your profile" %></h3>
  </div>
</div>
<div class="container">
  <div class="row center">
    <%= form_for(@student, html: { class: "col s12" }) do |f| %>
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <%= f.label :name, class: "icon_prefix" %>
          <%= f.text_field :name, class: "icon_prefix" %>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <%= f.label :email, class: "icon_email" %>
          <%= f.text_field :email, class: "icon_email validate" %>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.submit(@student.new_record? ? "Sign Up" : "Submit updates" , class: "btn waves-effect waves-light") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>